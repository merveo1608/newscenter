@model Category

@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";


}



<form asp-action="UpdateCategory" asp-controller="Category" method="post" class="p-3 w-75 m-auto">

    <input type="hidden" asp-for="ID" />
    <div class="mb-3">
        <label>Kategori ismi</label>
        <input asp-for="CategoryName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Açıklama</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Sıra Numarası</label>
        <input asp-for="SortNumber" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Oluşturulma Tarihi</label>
        <input asp-for="CreatedDate" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label> Güncelleme Tarihi</label>
        <input asp-for="ModifiedDate" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label>Silinme Tarihi</label>
        <input asp-for="DeletedDate" class="form-control" disabled />
    </div>

    

    <div class="mb-3">
        <button class="btn btn-primary">Kategori Güncelle</button>
        <a asp-action="Index" button class="btn btn-primary">Geri</a>
    </div>
</form>
