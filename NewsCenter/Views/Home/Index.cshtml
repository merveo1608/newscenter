﻿@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <div class="col-7">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">

                    @for (int i = 0; i < ViewBag.news.Count; i++)
                    {
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "")" aria-label="Slide @i+1"></button>

                    }

                </div>
                <div class="carousel-inner">

                    @for (int i = 0; i < ViewBag.news.Count; i++)
                    {
                        News item = ViewBag.news[i];

                        <div class="carousel-item @(i == 0 ? "active" : "")">

                            <a href="@Url.Action("Index", "NewsDetail", new { id = @item.ID })">
                                <img src="@item.ImageURL" class="d-block w-100" alt="...">
                            </a>
                        </div>
                    }

                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <div class="col-2">
            @foreach (Advert item in ViewBag.adverts)
            {
                <a href="@item.WebsiteURL" target="_blank">
                    <img src="@item.ImageURL" class="d-block w-100" alt="...">
                </a>
            }

        </div>
    </div>
    <hr >
    <div class="row mt-4">
        <div class="col-12 text-start mb-4">
            <h1 class="font-weight-bold">Arşiv Haberler</h1>
            <hr>

        </div>
    @foreach (News item in ViewBag.archiveNews)
    {
        <div class="col-3 mb-2">
                <a href="@Url.Action("Index", "NewsDetail", new { id = item.ID })" class="text-black text-decoration-none">

            <div class="card">
                <div class="card-body">
                            <img src="@item.ImageURL" class="card-img-top" alt="...">

                        <h5 class="card-title">@item.Header </h5>
                </div>
            </div>
            </a>
        </div>
    }
    </div>

</div>