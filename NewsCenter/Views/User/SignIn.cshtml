

@model LoginViewModel




    <div class="container">
    <div class="row justify-content-center mt-2" style="height:100vh;">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Giriş</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a asp-controller="User" asp-action="Register">Kayıt</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">

<form asp-action="SignIn">
    <div class="form-group">
        <label >Eposta</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label >Şifre</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <div class="form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label"></label>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
    </div>
    <div class="form-group">
        <a asp-page="/Account/ForgotPassword">Şifremi Unuttum</a>
    </div>
</form>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>

                </div>
            </div>
        </div>
    </div>
</div>

